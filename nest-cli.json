{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "tsconfig.json",
    "assets": [
      {
        "include": "./src/",
        "watchAssets": true
      },
      {
        "include": "./src/**/*.gql",
        "watchAssets": true
      }
    ]
  }
}
