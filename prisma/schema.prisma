generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id String @default(uuid()) @id
  email String  @unique
  password String

  UserDetails UserDetails[]
}

model UserDetails{
  id String @default(uuid()) @id
  name String
  mobileNumber String

  userId String
  user User? @relation(fields: [userId], references: [id])
}